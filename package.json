{
    "version": "1.1.6",
    "name": "rallyhub",
    "author": "eugene27th",
    "main": "core/app/index.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --win"
    },
    "dependencies": {
        "binary-parser": "^2.3.0",
        "electron-updater": "^6.7.3"
    },
    "devDependencies": {
        "electron": "^40.1.0",
        "electron-builder": "^26.7.0"
    },
    "build": {
        "appId": "ru.rallyhub.desktop",
        "productName": "rallyhub",
        "win": {
            "icon": "icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": true,
            "artifactName": "${productName}-setup-${version}.${ext}",
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico"
        },
        "publish": [
            {
                "provider": "generic",
                "url": "https://cdn.rallyhub.ru/app/updates/"
            }
        ],
        "electronLanguages": [
            "en-US"
        ]
    }
}
